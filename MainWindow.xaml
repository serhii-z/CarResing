        <TextBlock x:Name="finish" Grid.Column="16" Grid.Row="3" Grid.ColumnSpan="15" Text="{Binding Finish, Mode=OneWay, UpdateSourceTrigger=PropertyChanged }" Foreground="Red" ></TextBlock>
<!--Картинки (машины)-->

        <!--Позиция 1:-->
        <Image x:Name="Truck1" Source="images_Race/1.png" Grid.Row="9" Grid.RowSpan="12" Grid.Column="2" Grid.ColumnSpan="6" Visibility="Visible"/>
        <Image x:Name="Bus1" Source="images_Race/2.png" Grid.Row="9" Grid.RowSpan="10" Grid.Column="14" Grid.ColumnSpan="4" Visibility="Visible"/>
        <Image x:Name="PassCar1" Source="images_Race/3.png" Grid.Row="8" Grid.RowSpan="8" Grid.Column="26" Grid.ColumnSpan="3" Visibility="Visible"/>
        <Image x:Name="SportCar1" Source="images_Race/4.png" Grid.Row="8" Grid.RowSpan="8" Grid.Column="37" Grid.ColumnSpan="3" Visibility="Visible"/>
        <!--Позиция 2:-->
        <Image x:Name="Truck2" Source="images_Race/1.png" Grid.Row="3" Grid.RowSpan="12" Grid.Column="2" Grid.ColumnSpan="6" Visibility="Hidden"/>
        <Image x:Name="Bus2" Source="images_Race/2.png" Grid.Row="4" Grid.RowSpan="10" Grid.Column="14" Grid.ColumnSpan="4" Visibility="Hidden"/>
        <Image x:Name="PassCar2" Source="images_Race/3.png" Grid.Row="4" Grid.RowSpan="8" Grid.Column="26" Grid.ColumnSpan="3" Visibility="Hidden"/>
        <Image x:Name="SportCar2" Source="images_Race/4.png" Grid.Row="4" Grid.RowSpan="8" Grid.Column="37" Grid.ColumnSpan="3" Visibility="Hidden"/>
        <!--Позиция 3:-->
        <Image x:Name="Truck3" Source="images_Race/1.png" Grid.Row="1" Grid.RowSpan="12" Grid.Column="2" Grid.ColumnSpan="6" Visibility="Hidden"/>
        <Image x:Name="Bus3" Source="images_Race/2.png" Grid.Row="2" Grid.RowSpan="10" Grid.Column="14" Grid.ColumnSpan="4" Visibility="Hidden"/>
        <Image x:Name="PassCar3" Source="images_Race/3.png" Grid.Row="2" Grid.RowSpan="8" Grid.Column="26" Grid.ColumnSpan="3" Visibility="Hidden"/>
        <Image x:Name="SportCar3" Source="images_Race/4.png" Grid.Row="2" Grid.RowSpan="8" Grid.Column="37" Grid.ColumnSpan="3" Visibility="Hidden"/>
        
        <!--Кнопки:-->
        
        <Button x:Name="startButton" Grid.Column="45" Grid.Row="6" Grid.ColumnSpan="4" Content="Start" Click="StartButton_Click"/>

        <Button x:Name="createTruck" Grid.Column="45" Grid.Row="14" Grid.ColumnSpan="4" Content="Truck" Click="CreateTruck_Click"/>
        <Button x:Name="createBus" Grid.Column="45" Grid.Row="12" Grid.ColumnSpan="4" Content="Bus" Click="CreateBus_Click"/>
        <Button x:Name="createPassCar" Grid.Column="45" Grid.Row="10" Grid.ColumnSpan="4" Content="PassCar" Click="CreatePassCar_Click"/>
        <Button x:Name="createSportCar" Grid.Column="45" Grid.Row="8" Grid.ColumnSpan="4" Content="SportCar" Click="CreateSportCar_Click"/>
        
<!--Текстбоксы:-->
         
        
        

        <TextBox x:Name="BoxTruck" Background="AliceBlue" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="10" Grid.RowSpan="2" IsReadOnly="True" Visibility="Visible" Text="{Binding InfoTrack, Mode=OneWay, UpdateSourceTrigger=PropertyChanged }"></TextBox>
        <TextBox x:Name="BoxBus" Background="AliceBlue" Grid.Column="11" Grid.Row="0" Grid.ColumnSpan="10" Grid.RowSpan="2" IsReadOnly="True" Visibility="Visible" Text="{Binding InfoBus, Mode=OneWay, UpdateSourceTrigger=PropertyChanged }"></TextBox>
        <TextBox x:Name="BoxPassCar" Background="AliceBlue" Grid.Column="22" Grid.Row="0" Grid.ColumnSpan="10" Grid.RowSpan="2" IsReadOnly="True" Visibility="Visible" Text="{Binding InfoPassCar, Mode=OneWay, UpdateSourceTrigger=PropertyChanged }"></TextBox>
        <TextBox x:Name="BoxSportCar" Background="AliceBlue" Grid.Column="33" Grid.Row="0" Grid.ColumnSpan="10" Grid.RowSpan="2" IsReadOnly="True" Visibility="Visible" Text="{Binding InfoSportCar, Mode=OneWay, UpdateSourceTrigger=PropertyChanged }"></TextBox>

        <!--Разметка дороги:-->
        
